<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:d9.ucm"
             x:Class="d9.ucm.BrowsePage"
             Title="BrowsePage">
    <VerticalStackLayout>
        <local:CompetitionSelector x:Name="CompetitionSelector" CompetitionSelected="CompetitionSelector_CompetitionSelected"/>
        <local:ItemView x:Name="ItemView" Grid.Row="1" HeightRequest="800"/>
        <HorizontalStackLayout HorizontalOptions="Center" x:Name="Buttons">
            <Button Text="Previous" Clicked="Previous" WidthRequest="100"/>
            <Button Text="Next" Clicked="Next" WidthRequest="100"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>