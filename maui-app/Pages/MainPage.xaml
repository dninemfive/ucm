<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:d9.ucm"
             x:Class="d9.ucm.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            <!-- Entry x:Name="DataPathEntry" -->
            <Button x:Name="ResaveButton" Text="Resave All Items" Clicked="ResaveAllItems"/>
            <Button x:Name="TestHashThingButton" Text="check for duplicate hashes" Clicked="TestHashThing"/>
            <ProgressBar x:Name="ProgressBar"/>
            <Button Text="Open Debug Console" Clicked="OpenDebugConsole"/>
            <Button Text="Test Url Thing" Clicked="TestUrlThing"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
