<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:d9.ucm"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="d9.ucm.CompetitionPage">
    <toolkit:DockLayout x:Name="MainLayout">
        <local:CompetitionSelector x:Name="CompetitionCreation" AllowNewItem="True" toolkit:DockLayout.DockPosition="Top"/>
        <HorizontalStackLayout x:Name="ItemViews" IsVisible="False">
            <local:CompetitionItemView x:Name="LeftItemView"/>
            <local:CompetitionItemView x:Name="RightItemView"/>
        </HorizontalStackLayout>
        <VerticalStackLayout x:Name="BottomDock" toolkit:DockLayout.DockPosition="Bottom">
            <Button x:Name="SkipButton" Text="Skip" Clicked="Skip_Clicked" HeightRequest="50"/>
            <local:HistogramView x:Name="Histogram" 
                                 IsVisible="False" 
                                 HorizontalOptions="Center" 
                                 HeightRequest="50" 
                                 ForegroundColor="#EE6900"
                                 ForcedLowerBound="0"/>
        </VerticalStackLayout>
    </toolkit:DockLayout>
</ContentPage>
