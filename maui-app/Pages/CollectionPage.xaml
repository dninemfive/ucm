<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:d9.ucm"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="d9.ucm.CollectionPage">
    <Grid>
        <!-- https://stackoverflow.com/a/75227107 -->
        <toolkit:DockLayout Padding="40">            
            <HorizontalStackLayout x:Name="SearchTerms" toolkit:DockLayout.DockPosition="Top">
                <local:CompetitionSelector x:Name="CompetitionSelector" AllowNewItem="False"/>
                <local:TagSearchView x:Name="TagSearchBar"/>
            </HorizontalStackLayout>
            <ScrollView x:Name="ScrollView">
                <FlexLayout x:Name="ItemsHolder" 
                Direction="Row" 
                FlowDirection="LeftToRight"
                Wrap="Wrap"
                AlignItems="Center"
                AlignContent="Center">
                </FlexLayout>
            </ScrollView>
            <local:NavigationView x:Name="NavigationButtons" 
                              IsVisible="False" 
                              toolkit:DockLayout.DockPosition="Bottom" 
                              HeightRequest="40"/>
        </toolkit:DockLayout>
    </Grid>
</ContentPage>
