<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:d9.ucm"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="d9.ucm.CollectionPage">
    <!-- https://stackoverflow.com/a/75227107 -->
    <toolkit:DockLayout>
        <local:CompetitionSelector x:Name="CompetitionSelector" AllowNewItem="False" toolkit:DockLayout.DockPosition="Top"/>
        <ScrollView x:Name="ScrollView" Scrolled="ScrollView_Scrolled">    
            <FlexLayout x:Name="ItemsHolder" 
                Direction="Row" 
                FlowDirection="LeftToRight"
                Wrap="Wrap"
                AlignItems="Center"
                AlignContent="Center">
            </FlexLayout>
        </ScrollView>
        <local:NavigationView x:Name="NavigationButtons" IsVisible="True" toolkit:DockLayout.DockPosition="Bottom" BackgroundColor="Magenta" HeightRequest="500" WidthRequest="500"/>
    </toolkit:DockLayout>
</ContentPage>
