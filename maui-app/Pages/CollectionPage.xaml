<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:d9.ucm"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="d9.ucm.CollectionPage">
    <!-- https://stackoverflow.com/a/75227107 -->
    <toolkit:DockLayout>
        <local:CompetitionSelector x:Name="CompetitionSelector" AllowNewItem="False" toolkit:DockLayout.DockPosition="Top"/>
        <ScrollView x:Name="ScrollView" Scrolled="ScrollView_Scrolled">    
            <FlexLayout x:Name="ItemsHolder" 
                Direction="Row" 
                FlowDirection="LeftToRight"
                Wrap="Wrap"
                AlignItems="Start"
                AlignContent="Start">
            </FlexLayout>
        </ScrollView>
        <HorizontalStackLayout x:Name="NavigationButtonHolder" HorizontalOptions="Center" VerticalOptions="End" IsVisible="False">
            <Button x:Name="PreviousPage" Text="Previous" WidthRequest="100" HeightRequest="40" Clicked="PreviousPage_Clicked"/>
            <Label x:Name="CurrentPage" Text="0" Padding="5"/>
            <Button x:Name="NextPage" Text="Next" WidthRequest="100" HeightRequest="40" Clicked="NextPage_Clicked"/>
        </HorizontalStackLayout>
    </toolkit:DockLayout>
</ContentPage>
