<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="d9.ucm.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:d9.ucm"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
        <ShellContent
        Title="Acquire"
        ContentTemplate="{DataTemplate local:AcquisitionPage}"
        Route="Acquisition" />
        <ShellContent
        Title="Compete"
        ContentTemplate="{DataTemplate local:CompetitionPage}"
        Route="Competition" />
        <ShellContent
        Title="Collection"
        ContentTemplate="{DataTemplate local:CollectionPage}"
        Route="Collection" />
        <ShellContent
        Title="Browse"
        ContentTemplate="{DataTemplate local:BrowsePage}"
        Route="Browse" />
    </TabBar>

</Shell>
