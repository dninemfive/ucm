<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="d9.ucm.AddItems">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            <Button x:Name="Button_StartAdding" Text="Start" Clicked="StartAdding"/>
            <Image x:Name="Item"/>
            <HorizontalStackLayout>
                <Button x:Name="Accept" Clicked="Accept_Clicked"/>
                <Button x:Name="Reject" Clicked="Reject_Clicked"/>
            </HorizontalStackLayout>
            <ListView x:Name="Output"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
