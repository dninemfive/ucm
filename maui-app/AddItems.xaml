<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="d9.ucm.AddItems">    
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="StartAndExpand">
            <Button x:Name="LoadPaths" Text="Start" Clicked="LoadPaths_Clicked"/>
            <VerticalStackLayout x:Name="InProgressItems" IsVisible="False">
                <HorizontalStackLayout>
                    <Label x:Name="ProgressLabel" Text="x/y"/>
                    <Label x:Name="CurrentPath" Grid.Column="0"/>
                </HorizontalStackLayout>
                <Image x:Name="Item" Aspect="AspectFit" VerticalOptions="CenterAndExpand" HeightRequest="850"/>
                <HorizontalStackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="EndAndExpand">
                    <Button x:Name="Accept" Text="Accept" Clicked="Accept_Clicked"/>
                    <Button x:Name="Skip" Text="Skip" Clicked="Skip_Clicked"/>
                    <Button x:Name="Reject" Text="Reject" Clicked="Reject_Clicked"/>
                </HorizontalStackLayout>
                <ProgressBar x:Name="ProgressBar" Progress="0" VerticalOptions="Start"/>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
