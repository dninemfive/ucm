<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="d9.ucm.ThumbnailView">
    <AbsoluteLayout BackgroundColor="#222222" Margin="5">
        <Image x:Name="Thumbnail" ZIndex="0" Aspect="AspectFit" AnchorX="0" AnchorY="0"/>
        <AbsoluteLayout ZIndex="1" AnchorX="0" AnchorY="0" BackgroundColor="Black" Opacity=".69">
            <Label x:Name="Label" 
               ZIndex="3" 
               VerticalOptions="Start" 
               IsVisible="False" 
               AnchorX="0" 
               AnchorY="0"
               Margin="5"/>
        </AbsoluteLayout>
    </AbsoluteLayout>
</ContentView>
