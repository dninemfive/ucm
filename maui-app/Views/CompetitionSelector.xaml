<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="d9.ucm.CompetitionSelector">
    <VerticalStackLayout>
        <Picker Title="Select competition..." 
                x:Name="Dropdown"
                SelectedIndexChanged="Dropdown_SelectedIndexChanged"/>
        <Label x:Name="DebugThingy" Text="Fuck"/>
        <Grid x:Name="CreationItems" IsVisible="False">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Entry x:Name="CompetitionName" 
               TextChanged="CompetitionName_TextChanged" 
               Completed="CreateCompetition" 
               Grid.Column="0"/>
            <Button x:Name="CreateButton" 
                Text="Create" 
                Clicked="CreateCompetition"
                Grid.Column="1"/>
        </Grid>
    </VerticalStackLayout>
</ContentView>
